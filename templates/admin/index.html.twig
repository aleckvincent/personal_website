{% extends 'admin/base.html.twig' %}

{% block title %}À propos {% endblock %}
{% block body  %}
<div class="row">
          <div class="col-md-4">
            <div class="card card-user">
              <div class="image">
                <img src="https://picsum.photos/id/1041/800/1200/?blur" alt="...">
              </div>
              <div class="card-body">
                <div class="author">
                  <a href="#">
                    <img class="avatar border-gray" src="https://i.pravatar.cc/150?img=7" alt="...">
                    <h5 class="title">Aleck</h5>
                  </a>
                 
                </div>
                <p class="description text-center">
                  "I like the way you work it
                  <br> No diggity
                  <br> I wanna bag it up"
                </p>
              </div>
             
            </div>
            
          </div>
          <div class="col-md-8">
            <div class="card card-user">
              <div class="card-header">
                <h5 class="card-title">Modifier le profil</h5>
              </div>
              <div class="card-body">
              
                <form method="post" action="{{path('admin_index')}}">
                  
                  <div class="row">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                        <label>Prénom</label>
                        {{form_widget(form.first_name)}}
                      </div>
                    </div>
                    <div class="col-md-6 pl-1">
                      <div class="form-group">
                        <label>Nom</label>
                        {{form_widget(form.last_name)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                  <div class="col-md-6">
                      <div class="form-group">
                        <label>Identifiant</label>
                        {{form_widget(form.username)}}
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Téléphone</label>
                        {{form_widget(form.phone)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Ville</label>
                        {{form_widget(form.city)}}
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Pays</label>
                        {{form_widget(form.country)}}
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Email</label>
                        {{form_widget(form.email)}}
                      </div>
                    </div>

                  </div>
                 
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>À propos</label>
                       {{form_widget(form.description)}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                   <div class="col-md-12">
                    <div class="checkbox">
                        <label><input type="checkbox" value=""> Disponible</label>
                    </div>
                   </div>
                  </div>
                  <div class="row">
                    <div class="update ml-auto mr-auto">
                      <button type="submit" class="btn btn-primary btn-round">Mettre à jour</button>
                    </div>
                  </div>

                  {{form(form._token)}}
                </form>
              </div>
            </div>
          </div>
        </div>

        {% endblock body %}